<h1>Wikinimous</h1>

<% @articles.each do |article| %>
  <h2><%= link_to article.title, article_path(article) %></h2>
  <p><%= article.content %></p>
  <p><%= link_to "Edit the article", edit_article_path(article) %> | <%= link_to "Delete the article", article_path(article), method: :delete,
      data: { confirm: "Are you sure?" } %> </p>
<% end %>

